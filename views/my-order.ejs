<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="myorder" appConnect="local" components="{dmxDataTraversal:{},dmxFormatter:{}}" -->
<meta name="ac:route" content="/my-order">
<dmx-serverconnect id="scOrderList" url="/api/Orders/GetOrders"></dmx-serverconnect>
<dmx-data-view id="dvOrderList" dmx-bind:data="content.scOrderList.data.OrderList"></dmx-data-view>
<dmx-data-detail id="ddOrderList" dmx-bind:data="content.dvOrderList.data" key="id"></dmx-data-detail>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="/assets/css/slicknav.min.css" type="text/css">
<link rel="stylesheet" href="/assets/css/style.css" type="text/css">
<link rel="stylesheet" href="/assets/css/demo.css" type="text/css">
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>My Order</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a><span>Orders List</span>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<main style="background-color: lightgray;">

    <div class="row mx-md-4 mx-0">
        <span class="ab1">
            <a href="/">Home <i class="fa fa-angle-right"></i></a>
            <a href="my-order">My Order<i class="fa fa-angle-right"></i></a>
        </span>
        <div class="col-md-3 col-12">
            <div class="column1 py-3">
                <input type="checkbox" class="m-3"><span>All</span><br>
                <input type="checkbox" class="m-3"><span>On the Way</span><br>
                <input type="checkbox" class="m-3"><span>Delivered</span><br>
                <input type="checkbox" class="m-3"><span>Cancelled</span><br>
                <input type="checkbox" class="m-3"><span>Returned</span><br>
            </div>
        </div>
        <div class="col-md-9 col-12 px-0">
            <input type="search" id="myInput1" placeholder="Search your product.." title="Type in a name">
            <button type="submit1" class="site-btn11">SEARCH</button>
            <div class="col-lg-3"></div>
            <div class="card ml-0 mr-md-3 mr-0" dmx-repeat:repeat1="content.dvOrderList.data" id="cardOrder">
                <div class="card-body m-0">
                    <div class="media row mx-0">
                        <div class="col-md-2 col-4 sq align-self-center text-center mb-3 mb-md-0">
                            <img class="my-auto align-self-center mr-2 mr-md-4 pl-0 p-0 m-0" dmx-bind:src="'https://secure.gravitto.com'+content.dvOrderList.data[$index].product[0].shop_logo" />
                        </div>
                        <div class="col-md-3 col-8 mb-3 mb-md-0">
                            <a dmx-bind:href="'/shop-details/'+content.dvOrderList.data[$index].product[0].rest_id+'/'+content.dvOrderList.data[$index].product[0].shop_name">
                                <h6 class="font-weight-bold mb-0">{{content.dvOrderList.data[$index].product[0].shop_name}}</h6>
                            </a>
                            <p class="m-0">{{content.dvOrderList.data[$index].product[0].shop_address}}</p>
                            <small class="text-black-50">39 mints</small>
                        </div>
                        <div class="col-md-3 col-4">
                            <a dmx-bind:href="'/order-details/'+content.dvOrderList.data[$index].id" class="text-primary"><small>
                                    View Order
                                </small></a><br /><small class="text-black-50">Items: {{content.dvOrderList.data[$index].product.length}}</small><br />
                            <small class="text-black-50">Total: <i class="fa fa-rupee"></i>{{content.dvOrderList.data[$index].net_order_amt.toFixed(2)}}</small>
                        </div>
                        <div class="col-md-3 col-7">
                            <h6 class="mb-0 font-weight-bold" dmx-class:text-warning="content.dvOrderList.data[$index].status==1" dmx-class:text-danger="content.dvOrderList.data[$index].status==2" dmx-class:text-primary="content.dvOrderList.data[$index].status==3" dmx-class:text-info="content.dvOrderList.data[$index].status==4" dmx-class:text-success="content.dvOrderList.data[$index].status==5" dmx-class:text-danger="content.dvOrderList.data[$index].status==6">{{(content.dvOrderList.data[$index].status==1)?'Confirmed':(content.dvOrderList.data[$index].status==2)?'Cancelled':(content.dvOrderList.data[$index].status==3)?'Prepairing/ Processing':(content.dvOrderList.data[$index].status==4)?'Out for Delivery':(content.dvOrderList.data[$index].status==5)?'Delivered':(content.dvOrderList.data[$index].status==6)?'Returned':''}}</h6>
                            <small>{{content.dvOrderList.data[$index].updated_on?content.dvOrderList.data[$index].updated_on.formatDate('dd MMM yyyy hh:mm A'):content.dvOrderList.data[$index].created_on.formatDate('dd MMM yyyy hh:mm A')}}</small>
                            <br>
                            <a href="#" class="text-black-50"><i class="fa fa-star"></i> Rate and Review Shop</a>
                        </div>
                        <div class="col-1">
                            <a href="product"><i class="fa-solid fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-100 text-center" dmx-show="content.dvOrderList.data.length==0">
                <p>No Orders Yet!</p>
            </div>
        </div>
    </div>
</main>
<!---my order pagebend-->