<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="categories" appConnect="local" -->
<meta name="ac:route" content="/categories">
<dmx-serverconnect id="scCategory" url="/api/Category/ActiveCategory" dmx-param:market="1" dmx-param:limit=""></dmx-serverconnect>
<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Menu</span>
                    </div>
                    <ul>
                        <li><a href="categories">Categories</a></li>
                        <li><a href="restaurants">Restaurant</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+91 9287954127</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="assets/img/hero/banner.jpg">
                    <div class="hero__text">
                        <span>FRESH FOOD</span>
                        <h2>Food <br />100% pure</h2>
                        <p>Free Pickup and Delivery Available</p>
                        <a href="#" class="primary-btn">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories featured spad">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>{{varLanguage.value=='English'?'Categories':varLanguage.value=='Bengali'?'ক্যাটাগরি':varLanguage.value=='Hindi'?'श्रेणियाँ':'Categories'}}</h2>
                </div>
            </div>
            <!--Carousel Wrapper-->
            <div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">

                <!--Controls-->
                <!-- <div class="controls-top">
                    <a class="btn-floating" href="#multi-item-example" data-slide="prev"><i class="fa fa-chevron-left"></i></a>
                    <a class="btn-floating float-right" href="#multi-item-example" data-slide="next"><i class="fa fa-chevron-right"></i></a>
                </div> -->
                <!--/.Controls-->

                <!--Indicators-->
                <ol class="carousel-indicators">
                    <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
                    <li data-target="#multi-item-example" data-slide-to="1"></li>

                </ol>
                <!--/.Indicators-->
                <!--Slides-->
                <div class="carousel-inner px-0" role="listbox">
                    <!--First slide-->
                    <div class="carousel-item active" id="repeatCat" is="dmx-repeat" dmx-bind:repeat="content.scCategory.data.GetCat.data" key="cat_id">

                        <div class="col-6 col-md-4 col-lg-3 mb-3" style="float:left">
                            <div class="card mb-2">
                                <a dmx-bind:href="'/category-details/'+content.scCategory.data.GetCat.data[$index].cat_id+'/'+content.scCategory.data.GetCat.data[$index].en_name"><img class="card-img-top" dmx-bind:src="'https://secure.gravitto.com'+content.scCategory.data.GetCat.data[$index].image" class="card-img-top" dmx-bind:alt="content.scCategory.data.GetCat.data[$index].en_name"></a>
                                <div class="card-body p-0">
                                    <h4 class="card-title">{{varLanguage.value=='English'?content.scCategory.data.GetCat.data[$index].en_name:varLanguage.value=='Bengali'?content.scCategory.data.GetCat.data[$index].bn_name:varLanguage.value=='Hindi'?content.scCategory.data.GetCat.data[$index].hin_name:content.scCategory.data.GetCat.data[$index].en_name}}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/.First slide-->
                </div>
                <!--/.Slides-->
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->