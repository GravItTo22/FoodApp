<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="categorydetails" appConnect="local" -->
<meta name="ac:route" content="/category-details/:id/:cat_name">
<dmx-serverconnect id="scCategoryProd" url="/api/Category/CategoryDetails" dmx-param:market="1" dmx-param:cat_id="<%= $_PARAM.id %>"></dmx-serverconnect>
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Category- <%= $_PARAM.cat_name %> ({{content.scCategoryProd.data.GetCatProd.length}})
                    </h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter" id="repeatProd" is="dmx-repeat" dmx-bind:repeat="scCategoryProd.data.GetCatProd" key="p_id">
            <div class="col-lg-3 col-md-4 col-6 mix">
                <div class="featured__item">
                    <div class="featured__item__pic">
                        <img class="featured__item__pic" dmx-bind:src="'https://secure.gravitto.com'+scCategoryProd.data.GetCatProd[$index].prod_img1" dmx-bind:alt="content.scCategoryProd.data.GetCatProd[$index].prod_name_en">
                        <ul class="featured__item__pic__hover">
                            <li dmx-on:click="run({run:{action:`scAddtoWishlist.load({product_id: scCategoryProd.data.GetCatProd[$index].prod_id, price: content.repeatProd.items[$index].select.value},true);scDashboardInfo.load();notifMain.info(((varLanguage.value==\'English\')?scCategoryProd.data.GetCatProd[$index].prod_name_en:(varLanguage.value==\'Bengali\')?scCategoryProd.data.GetCatProd[$index].prod_name_bn:(varLanguage.value==\'Hindi\')?scCategoryProd.data.GetCatProd[$index].prod_name_hin:scCategoryProd.data.GetCatProd[$index].prod_name_en)+\' added to wish-list\')`,name:'FlowWishlist'}})"><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-circle" dmx-class:text-success="content.scCategoryProd.data.GetCatProd[$index].prod_mark_id==1" dmx-class:text-danger="content.scCategoryProd.data.GetCatProd[$index].prod_mark_id==2"></i></a></li>
                            <li dmx-on:click="run({run:{action:`scAddtoCart.load({product_id: scCategoryProd.data.GetCatProd[$index].prod_id, price: content.repeatProd.items[$index].select.value},true);scDashboardInfo.load(true);notifMain.success(((varLanguage.value==\'English\')?scCategoryProd.data.GetCatProd[$index].prod_name_en:(varLanguage.value==\'Bengali\')?scCategoryProd.data.GetCatProd[$index].prod_name_bn:(varLanguage.value==\'Hindi\')?scCategoryProd.data.GetCatProd[$index].prod_name_hin:scCategoryProd.data.GetCatProd[$index].prod_name_en)+\'  added to cart \')`,name:'Flow'}})"><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h5 class="mb-0"><a dmx-bind:href="'/product-details/'+scCategoryProd.data.GetCatProd[$index].p_id+'/'+scCategoryProd.data.GetCatProd[$index].prod_name_en">{{varLanguage.value=='English'?content.scCategoryProd.data.GetCatProd[$index].prod_name_en:varLanguage.value=='Bengali'?content.scCategoryProd.data.GetCatProd[$index].prod_name_bn:varLanguage.value=='Hindi'?content.scCategoryProd.data.GetCatProd[$index].prod_name_hin:content.scCategoryProd.data.GetCatProd[$index].prod_name_en}}</a></h5>
                        <p><a dmx-bind:href="'/shop-details/'+content.scCategoryProd.data.GetCatProd[$index].rest_id+'/'+content.scCategoryProd.data.GetCatProd[$index].shop_name_en">{{varLanguage.value=='English'?content.scCategoryProd.data.GetCatProd[$index].shop_name_en:varLanguage.value=='Bengali'?content.scCategoryProd.data.GetCatProd[$index].shop_name_bn:varLanguage.value=='Hindi'?content.scCategoryProd.data.GetCatProd[$index].shop_name_hin:content.scCategoryProd.data.GetCatProd[$index].shop_name_en}}</a></p>
                        <select id="select" dmx-bind:id="'select'+$index" class="form-select form-control d-block w-100 text-monospace font-weight-bold" style="font-size:12px" dmx-bind:options="scCategoryProd.data.GetCatProd[$index].price" optiontext="quantity+' '+q_unit+' :: '+price.toNumber().formatCurrency('₹', '.', ',', 2)+' MRP:'+.mrp.toNumber().formatCurrency('₹', '.', ',', 2)" optionvalue="price_id">
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-12 text-center" dmx-show="content.scCategoryProd.data.status=='400'">{{content.scCategoryProd.data.message}}</div>

    </div>
</section>
<!-- Featured Section End -->