                "type": "text"
              },
              {
                "name": "prod_name_hin",
                "type": "text"
              },
              {
                "name": "prod_img1",
                "type": "text"
              },
              {
                "name": "shop_name_en",
                "type": "text"
              },
              {
                "name": "shop_name_bn",
                "type": "text"
              },
              {
                "name": "shop_name_hin",
                "type": "text"
              },
              {
                "name": "price",
                "type": "array",
                "sub": [
                  {
                    "name": "price_id",
