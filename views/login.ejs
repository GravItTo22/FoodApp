<!doctype html>
<html>

<head>
    <script src="/dmxAppConnect/dmxAppConnect.js"></script>
    <meta name="ac:route" content="/login">
    <base href="/">
    <meta charset="UTF-8">
    <title>Gravitto Signup and Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/assets/css/login.css" />
    <link rel="stylesheet" href="/dmxAppConnect/dmxValidator/dmxValidator.css" />
    <script src="/dmxAppConnect/dmxValidator/dmxValidator.js" defer=""></script>
    <script src="/dmxAppConnect/dmxStateManagement/dmxStateManagement.js" defer=""></script>
    <script src="/dmxAppConnect/dmxBrowser/dmxBrowser.js" defer=""></script>

    <link rel="stylesheet" href="/dmxAppConnect/dmxNotifications/dmxNotifications.css" />
    <script src="/dmxAppConnect/dmxNotifications/dmxNotifications.js" defer=""></script>
    <!-- <link rel="stylesheet" href="/bootstrap/5/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="/css/bootstrap-icons.css" />
    <link rel="stylesheet" href="/fontawesome5/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body id="login" is="dmx-app" class="bg-dark">
    <dmx-notifications id="notifMain"></dmx-notifications>
    <script is="dmx-flow" id="flowfocus" type="text/dmx-flow" autorun>[
  {
    wait: {delay: 100}
  },
  {
    run: {action: "{{crLogin.formLogin.Email.focus()}}"}
  }
]</script>
    <dmx-session-manager id="sessionLogin"></dmx-session-manager>
    <dmx-cookie-manager id="cookiesLogin"></dmx-cookie-manager>
    <div is="dmx-browser" id="browser1"></div>
    <dmx-value id="varLogin" dmx-bind:value="'Login'"></dmx-value>
    <dmx-value id="varInvalidLogin" dmx-bind:value="0"></dmx-value>
    <dmx-value id="varMobile" dmx-bind:value="0"></dmx-value>
    <dmx-notifications id="Notification" newest-on-top="true">
    </dmx-notifications>
    <header class="text-center">
        <div class="p-3" style="text-align-last: center;">
            <a href="#" internal><img src="/assets/img/gravito.jpg" alt="GRAVITO.COM" width="100" height="100" class="img-fluid img-thumbnail align-self-center"></a>
        </div>
    </header>
    <div class="container-fluid py-3 bg-gray-200 text-info">
        <div class="sd-login mx-2 mx-md-0">
            <div class="row align-items-center justify-content-center w-auto h-100">
                <div class="col-12 d-flex justify-content-center">

                    <div id="crLogin" is="dmx-if" dmx-bind:condition="varLogin.value=='Login' ">
                        <section class="sign-in">
                            <div class="container">
                                <div class="signin-content">
                                    <div class="signin-image">
                                        <figure><img src="/assets/images/signin-image.jpg" alt="sing up image"></figure>
                                        <p class="gio-pt" dmx-on:click="varLogin.setValue('Signup')">New here? Create an account</p>
                                    </div>
                                    <div class="signin-form">
                                        <h2 class="form-title">SignIn</h2>
                                        <form class="register-form" id="formLogin" is="dmx-serverconnect-form" method="post" action="/api/Users/SignIn" dmx-on:success="browser1.goto('/cart-items')" dmx-on:unauthorized="varInvalidLogin.setValue(1);formLogin.reset;" dmx-on:forbidden="notifMain.danger('This user doesnot exists, please try again!')">
                                            <div class="form-group">
                                                <label for="your_mobile" style="padding:10px;"><i class="far fa-user"></i></label>
                                                <input type="text" id="Mobile" name="Mobile" required="true" placeholder="Mobile Number" />
                                            </div>
                                            <div class="form-group">
                                                <label for="your_pass" style="padding:10px;"><i class="fas fa-key"></i></label>
                                                <input type="password" id="" name="Password" placeholder="Password" required="true" data-msg-required="Please enter your password" />
                                            </div>
                                            <div class="form-group mb-0">
                                                <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                                                <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                                            </div>
                                            <div class="form-group form-button">
                                                <button id="submitLogin" class="btn btn-primary text-white w-100 mt-2 mb-3 form-submit" type="submit" dmx-bind:disabled="state.executing">LogIn<span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span>
                                                </button>
                                            </div>
                                        </form>
                                        <p class="mt-3 gio-pt" dmx-on:click="varLogin.setValue('ForgotPass')">Forgot Password?</p>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div id="crForgotPassword" is="dmx-if" dmx-bind:condition="varLogin.value == 'ForgotPass'">
                        <div class="card sd-login-card">
                            <div class="card-body p-5">
                                <h1 class="sd-fs-45 sd-fw-500 text-black mb-4">Forgot Password</h1>
                                <p class="px-1 mb-4 sd-fs-18 sd-fw-500 text-black">Donâ€™t worry, we are here to help you</p>
                                <form id="formForgotPass" is="dmx-serverconnect-form" method="post" action="/api/Android/Users/ForgotPass" dmx-on:success="run({condition:{if:`crForgotPassword.formForgotPass.data.status==200`,then:{steps:{run:{action:`varLogin.setValue(\'ResetMobileSent\');notifMain.success(crForgotPassword.formForgotPass.data.message)`}}},else:{steps:{run:{action:`notifMain.warning(crForgotPassword.formForgotPass.data.message)`}}}}})">
                                    <div class="input-group mb-4">
                                        <span class="input-group-text border-1 border-end-0 bg-transparent"><i class="fa fa-user"></i></span>
                                        <input type="number" class="border-1 border-start-0 form-control" id="txtMobileForgotPass" name="Mobile" placeholder="Registered Mobile No.">
                                    </div>
                                    <button id="submitResetPass" class="btn btn-primary text-white w-100 my-4" type="submit" dmx-bind:disabled="state.executing" dmx-on:click="varMobile.setValue(txtMobileForgotPass.value)">Next<span class="spinner-border spinner-border-sm ms-2" role="status" dmx-show="state.executing"></span>
                                    </button>
                                    <a href="#" class="d-flex justify-content-center sd-fs-12 sd-fw-500 text-primary" internal data-bs-toggle="button" dmx-on:click="varLogin.setValue('Login')">Back to Login</a>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div id="crResetPassword" is="dmx-if" dmx-bind:condition="varLogin.value == 'ResetMobileSent'">
                        <div class="card sd-login-card">
                            <div class="card-body p-5">
                                <h1 class="sd-fs-45 sd-fw-500 text-black mb-4">Reset Password</h1>
                                <p class="px-1 mb-4 sd-fs-18 sd-fw-500 text-black">OTP/ OTC has sent to your registered mobile number</p>
                                <form id="formResetPass" is="dmx-serverconnect-form" method="post" action="/api/Android/Users/ResetPassword" dmx-on:success="run({condition:{if:`crResetPassword.formResetPass.data.status==200`,then:{steps:{run:{action:`Notification.success(crResetPassword.formResetPass.data.message);varLogin.setValue(\'Login\');varMobile.setValue(0);formResetPass.reset(true)`}}},else:{steps:{run:{action:`notifMain.warning(crResetPassword.formResetPass.data.message)`}}}}})" dmx-on:forbidden="Notification.warning(crResetPassword.formResetPass.data.message)" dmx-on:error="Notification.warning(crResetPassword.formResetPass.data.message)" dmx-on:unauthorized="Notification.warning(crResetPassword.formResetPass.data.message)" dmx-on:invalid="Notification.warning(crResetPassword.formResetPass.data.message)">
                                    <input type="hidden" id="txtMobileNo" name="Mobile" dmx-bind:value="varMobile.value">
                                    <div class="input-group mb-4">
                                        <span class="input-group-text border-1 border-end-0 bg-transparent"><i class="fa fa-clock-o"></i></span>
                                        <input type="text" class="border-1 border-start-0 form-control" id="txtOTPResetPass" name="UserOTP" placeholder="Enter OTP/ OTC">
                                    </div>
                                    <div class="input-group mb-4">
                                        <span class="input-group-text border-1 border-end-0 bg-transparent"><i class="fa fa-lock"></i></span>
                                        <input type="password" class="border-1 border-start-0 form-control" id="txtPassword" name="Password" placeholder="Enter New Password">
                                    </div>
                                    <div class="input-group mb-4">
                                        <span class="input-group-text border-1 border-end-0 bg-transparent"><i class="fa fa-lock"></i></span>
                                        <input type="password" class="border-1 border-start-0 form-control" id="txtConfirmPassword" name="ConfirmPass" placeholder="Enter Confirm Password">
                                    </div>
                                    <button id="submitPass" class="btn btn-primary text-white w-100 my-4" type="submit" dmx-bind:disabled="state.executing">Submit<span class="spinner-border spinner-border-sm ms-2" role="status" dmx-show="state.executing"></span>
                                    </button>
                                    <a href="#" class="d-flex justify-content-center sd-fs-12 sd-fw-500 text-primary" internal data-bs-toggle="button" dmx-on:click="varLogin.setValue('Login')">Back to Login</a>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div id="crSignup" is="dmx-if" dmx-bind:condition="varLogin.value == 'Signup'">
                        <section class="signup">
                            <div class="container">
                                <div class="signup-content">
                                    <div class="signup-form">
                                        <h2 class="form-title">Sign up</h2>
                                        <form method="POST" class="register-form" id="registerForm" method="post" is="dmx-serverconnect-form" action="/api/Users/SignUp" dmx-generator="bootstrap5" dmx-form-type="horizontal" dmx-on:success="notifMain.success(crSignup.registerForm.data);scDashboardInfo.load(true);registerForm.reset();browser1.goto('/cart-items')" dmx-on:forbidden="notifMain.warning(registerForm.lastError.response)" dmx-on:error="notifMain.warning(registerForm.lastError.response)" dmx-on:unauthorized="notifMain.warning(registerForm.lastError.response)" dmx-on:invalid="notifMain.warning(registerForm.lastError.response)">
                                            <div class="form-group">
                                                <label for="name"><i class="fa fa-mobile fa-2x"></i></label>
                                                <input type="number" id="MobileNo" name="Mobile" placeholder="10 digit Mobile No." required="" />
                                            </div>
                                            <div class="row mx-0">
                                                <label class="col-8 text-info px-0">Is this your whatsapp no?</label>
                                                <select class="col-4 form-control form-select" name="is_whatsapp" id="is_whatsapp" required="">
                                                    <option value="Yes">Yes</option>
                                                    <option value="No">No</option>
                                                </select>
                                            </div>
                                            <div class="row mx-0">
                                                <div class="form-group col-12 col-sm-6 pl-0">
                                                    <label for="name"><i class="fa fa-user-o"></i></label>
                                                    <input type="text" id="FName" name="FName" placeholder="First Name" required="" />
                                                </div>
                                                <div class="form-group col-12 col-sm-6 px-0">
                                                    <label for="name"><i class="fa fa-user-o pb-sm-3 pb-0"></i></label>
                                                    <input type="text" id="LName" name="LName" placeholder="Last Name" required="" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="email"><i class="fa fa-envelope-o"></i></label>
                                                <input type="text" id="EmailId" name="EmailId" placeholder="Email Id (optional)" />
                                            </div>
                                            <div class="row mx-0">
                                                <div class="form-group col-12 col-sm-6 pl-0">
                                                    <label for="name"><i class="fa fa-podcast"></i></label>
                                                    <input type="number" id="PIN" name="PIN" placeholder="Area PIN" required="" />
                                                </div>
                                                <div class="form-group col-12 col-sm-6 px-0">
                                                    <label for="name"><i class="fa fa-address-book-o pb-sm-3 pb-0"></i></label>
                                                    <input type="text" id="District" name="District" placeholder="District Name" required="" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="address"><i class="zmdi zmdi-email"></i></label>
                                                <textarea type="text" class="w-100 form-control" id="Address" name="Address" placeholder="Shipping Address" required=""></textarea>
                                            </div>
                                            <div class="form-group">
                                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" required="" />
                                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in <a href="#" class="term-service">Terms of service</a></label>
                                            </div>
                                            <div class="form-group form-button">
                                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                                            </div>
                                        </form>
                                    </div>
                                    <div class="signup-image">
                                        <figure><img src="/assets/images/signup-image.jpg" alt="sing up image"></figure>
                                        <p class="gio-pt" dmx-on:click="varLogin.setValue('Login')">Already Signup? Login Now</p>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/bootstrap/5/js/bootstrap.bundle.min.js"></script>
</body>

</html>