{
  "meta": {
    "options": {
      "linkedFile": "/views/layouts/main.ejs",
      "linkedForm": "scformSignin"
    },
    "$_POST": [
      {
        "type": "number",
        "fieldName": "Mobile",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            },
            "core:number": {}
          }
        },
        "name": "Mobile"
      },
      {
        "type": "text",
        "fieldName": "Password",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "Password"
      }
    ],
    "$_SERVER": [
      {
        "type": "text",
        "name": "REMOTE_ADDR"
      },
      {
        "type": "text",
        "name": "REMOTE_HOST"
      },
      {
        "type": "text",
        "name": "SERVER_NAME"
      }
    ]
  },
  "exec": {
    "steps": {
      "name": "",
      "module": "core",
      "action": "trycatch",
      "options": {
        "try": {
          "steps": [
            {
              "name": "GetSalt",
              "module": "dbconnector",
              "action": "single",
              "options": {
                "connection": "ClientApp",
                "sql": {
                  "type": "SELECT",
                  "columns": [
                    {
                      "table": "m_customer",
                      "column": "salt"
                    },
                    {
                      "table": "m_customer",
                      "column": "user_type_id"
                    }
                  ],
                  "table": {
                    "name": "m_customer"
                  },
                  "primary": "id",
                  "joins": [],
                  "wheres": {
                    "condition": "AND",
                    "rules": [
                      {
                        "id": "m_customer.mobile",
                        "field": "m_customer.mobile",
                        "type": "string",
                        "operator": "equal",
                        "value": "{{$_POST.Mobile}}",
                        "data": {
                          "table": "m_customer",
                          "column": "mobile",
                          "type": "text",
                          "columnObj": {
                            "type": "string",
                            "maxLength": -5,
                            "primary": false,
                            "unique": false,
                            "nullable": true,
                            "name": "mobile"
                          }
                        },
                        "operation": "="
                      },
                      {
                        "id": "m_customer.status",
                        "field": "m_customer.status",
                        "type": "double",
                        "operator": "equal",
                        "value": 1,
                        "data": {
                          "table": "m_customer",
                          "column": "status",
                          "type": "number",
                          "columnObj": {
                            "type": "integer",
                            "primary": false,
                            "unique": false,
                            "nullable": true,
                            "name": "status"
                          }
                        },
                        "operation": "="
                      }
                    ],
                    "conditional": null,
                    "valid": true
                  },
                  "query": "SELECT salt, user_type_id\nFROM m_customer\nWHERE mobile = :P1 /* {{$_POST.Mobile}} */ AND status = 1",
                  "params": [
                    {
                      "operator": "equal",
                      "type": "expression",
                      "name": ":P1",
                      "value": "{{$_POST.Mobile}}"
                    }
                  ]
                }
              },
              "output": false,
              "meta": [
                {
                  "type": "text",
                  "name": "salt"
                },
                {
                  "type": "number",
                  "name": "user_type_id"
                }
              ],
              "outputType": "object"
            },
            {
              "name": "identity",
              "module": "auth",
              "action": "login",
              "options": {
                "provider": "security",
                "username": "{{$_POST.Mobile}}",
                "password": "{{$_POST.Password.sha256(GetSalt.salt)}}",
                "remember": ""
              },
              "output": false,
              "meta": []
            },
            {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{identity}}",
                "then": {
                  "steps": [
                    {
                      "name": "loginToken",
                      "module": "core",
                      "action": "setsession",
                      "options": {
                        "value": "{{UUID.md5(123456).substr(1, 15)}}"
                      },
                      "output": true
                    },
                    {
                      "name": "LoginHistory",
                      "module": "dbupdater",
                      "action": "insert",
                      "options": {
                        "connection": "ClientApp",
                        "sql": {
                          "type": "insert",
                          "values": [
                            {
                              "table": "t_user_log",
                              "column": "user_id",
                              "type": "number",
                              "value": "{{identity}}"
                            },
                            {
                              "table": "t_user_log",
                              "column": "ip_address",
                              "type": "text",
                              "value": "{{$_SERVER.REMOTE_ADDR}}"
                            },
                            {
                              "table": "t_user_log",
                              "column": "login_time",
                              "type": "datetime",
                              "value": "{{NOW}}"
                            },
                            {
                              "table": "t_user_log",
                              "column": "login_from",
                              "type": "text",
                              "value": "{{'Android'}}"
                            },
                            {
                              "table": "t_user_log",
                              "column": "remote_ip",
                              "type": "text",
                              "value": "{{$_SERVER.REMOTE_HOST}}"
                            },
                            {
                              "table": "t_user_log",
                              "column": "login_server",
                              "type": "text",
                              "value": "{{$_SERVER.SERVER_NAME}}"
                            },
                            {
                              "table": "t_user_log",
                              "column": "login_token",
                              "type": "text",
                              "value": "{{loginToken}}"
                            }
                          ],
                          "table": "t_user_log",
                          "returning": "id",
                          "query": "INSERT INTO t_user_log\n(user_id, ip_address, login_time, login_from, remote_ip, login_server, login_token) VALUES (:P1 /* {{identity}} */, :P2 /* {{$_SERVER.REMOTE_ADDR}} */, :P3 /* {{NOW}} */, :P4 /* {{'Android'}} */, :P5 /* {{$_SERVER.REMOTE_HOST}} */, :P6 /* {{$_SERVER.SERVER_NAME}} */, :P7 /* {{loginToken}} */)",
                          "params": [
                            {
                              "name": ":P1",
                              "type": "expression",
                              "value": "{{identity}}"
                            },
                            {
                              "name": ":P2",
                              "type": "expression",
                              "value": "{{$_SERVER.REMOTE_ADDR}}"
                            },
                            {
                              "name": ":P3",
                              "type": "expression",
                              "value": "{{NOW}}"
                            },
                            {
                              "name": ":P4",
                              "type": "expression",
                              "value": "{{'Android'}}"
                            },
                            {
                              "name": ":P5",
                              "type": "expression",
                              "value": "{{$_SERVER.REMOTE_HOST}}"
                            },
                            {
                              "name": ":P6",
                              "type": "expression",
                              "value": "{{$_SERVER.SERVER_NAME}}"
                            },
                            {
                              "name": ":P7",
                              "type": "expression",
                              "value": "{{loginToken}}"
                            }
                          ]
                        }
                      },
                      "meta": [
                        {
                          "name": "identity",
                          "type": "text"
                        },
                        {
                          "name": "affected",
                          "type": "number"
                        }
                      ]
                    },
                    {
                      "name": "Status",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": 200
                      },
                      "meta": [],
                      "output": true,
                      "outputType": "text"
                    },
                    {
                      "name": "Resp",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "Login Success"
                      },
                      "meta": [],
                      "output": true,
                      "outputType": "text"
                    }
                  ]
                },
                "else": {
                  "steps": [
                    {
                      "name": "Status",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": 403
                      },
                      "meta": [],
                      "output": true,
                      "outputType": "text"
                    },
                    {
                      "name": "Resp",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "Unauthorized Access!"
                      },
                      "meta": [],
                      "output": true,
                      "outputType": "text"
                    }
                  ]
                }
              },
              "outputType": "boolean"
            }
          ]
        },
        "catch": {
          "steps": [
            {
              "name": "Status",
              "module": "core",
              "action": "setvalue",
              "options": {
                "value": 403
              },
              "meta": [],
              "output": true,
              "outputType": "text"
            },
            {
              "name": "Resp",
              "module": "core",
              "action": "setvalue",
              "options": {
                "value": "Suspicious Activity"
              },
              "meta": [],
              "output": true,
              "outputType": "text"
            }
          ]
        }
      }
    }
  }
}