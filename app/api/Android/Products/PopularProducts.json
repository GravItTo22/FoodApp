  "exec": {
    "steps": {
      "name": "",
      "module": "core",
      "action": "condition",
      "options": {
        "if": "{{$_GET.limit}}",
        "then": {
          "steps": {
            "name": "GetProd",
            "module": "dbupdater",
            "action": "custom",
            "options": {
              "connection": "ClientApp",
              "sql": {
                "query": "SELECT mp.id as p_id, mp.prod_id, mp.rest_id, mp.prod_mark_id, mp.prod_name_en, mp.prod_name_bn, mp.prod_name_hin, mp.prod_img1, mr.shop_name_en, mr.shop_name_bn, mr.shop_name_hin, (select array_to_json(array_agg(row_to_json(q))) from (select rpt.id as price_id, rpt.quantity, rpt.q_unit, rpt.mrp, rpt.selling_price as price, rpt.product_tax from r_price_table rpt where rpt.prod_id=mp.id) q) as price FROM m_product mp left join r_price_table rpt on (rpt.prod_id=mp.id) left join m_restaurant mr on (mr.id=mp.rest_id) WHERE mp.status=1 AND mp.market_id=@market ORDER by random() limit @limit",
                "params": [
                  {
                    "name": "@limit",
                    "value": "{{$_GET.limit}}",
                    "test": "10"
                  },
                  {
                    "name": "@market",
                    "value": "{{$_GET.market}}",
                    "test": "1"
                  }
                ]
              }
            },
            "output": true,
            "meta": [
              {
                "name": "p_id",
                "type": "number"
              },
